{
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb-base", "prettier"],
  "plugins": ["react"],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "comma-dangle": [2, "only-multiline"],
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off"
  }
}
