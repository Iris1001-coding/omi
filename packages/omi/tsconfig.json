{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.f",
    "allowJs": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "types": ["jest", "vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/*/*.ts",
    "src/construct-style-sheets-polyfill.js"
  ],
  "exclude": ["node_modules", "examples"]
}
